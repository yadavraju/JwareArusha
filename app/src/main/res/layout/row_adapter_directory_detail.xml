<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:scaleType="fitXY"
                android:background="@color/bg_grey" />

            <com.jwareconsulting.arusha.ui.view.CustomTextView
                app:fontName="@string/proxima_font_semi_bold"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_image"
                android:layout_toRightOf="@id/iv_image"
                android:textColor="@color/txt_black"
                android:textSize="18sp"
                tools:text="Chinese Whispers " />

            <RelativeLayout
                android:id="@+id/layout_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:minHeight="65dp"
                android:layout_toRightOf="@+id/iv_image">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_phone"
                    android:src="@drawable/ic_phone_call" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_phone"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_phone"
                    tools:text="Mobile tv_phone" />
                <ImageView
                    android:id="@+id/iv_contact2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_contact2"
                    android:src="@drawable/ic_phone_call" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_contact2"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_phone"
                    android:layout_below="@id/tv_phone"
                    tools:text="Contact2 tv_contact2" />


                <ImageView
                    android:id="@+id/iv_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_office"
                    android:src="@drawable/ic_phone_call" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_office"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_phone"
                    android:layout_below="@id/tv_contact2"
                    tools:text="Office tv_office" />


                <ImageView
                    android:id="@+id/iv_whats_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_whatsapp"
                    android:src="@drawable/ic_whats_app"
                    />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_whatsapp"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_office"
                    android:layout_toRightOf="@id/iv_whats_app"
                    tools:text="whats app  tv_whatsapp" />

                <ImageView
                    android:id="@+id/iv_viber"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignTop="@+id/tv_viber"
                    android:src="@drawable/viber"
                    />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_viber"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_whatsapp"
                    android:layout_toRightOf="@id/iv_whats_app"
                    tools:text="viber  tv_viber" />


                <ImageView
                    android:id="@+id/iv_skype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_skype"
                    android:src="@drawable/ic_skype" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_skype"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_viber"
                    android:layout_toRightOf="@id/iv_skype"
                    tools:text="skype   tv_skype " />

                <ImageView
                    android:id="@+id/iv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignTop="@+id/tv_mail"
                    android:src="@drawable/ic_mail" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_mail"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_skype"
                    android:layout_toRightOf="@id/iv_mail"
                    tools:text="Mail tv_mail" />


                <ImageView
                    android:id="@+id/iv_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_web"
                    android:src="@drawable/ic_web" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_web"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mail"
                    android:layout_toRightOf="@id/iv_web"
                    tools:text="Web   tv_web" />


                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_location"
                    android:src="@drawable/ic_place" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_location"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_web"
                    android:layout_toRightOf="@id/iv_location"
                    tools:text="location  tv_location" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_time"
                    android:src="@drawable/ic_time" />

                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_time"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_location"
                    android:layout_toRightOf="@id/iv_time"
                    tools:text="Time  tv_time" />




                <com.jwareconsulting.arusha.ui.fonts.ProximaNovaLight
                    android:id="@+id/tv_description"
                    style="@style/textStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_time"
                    android:layout_marginBottom="2.5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_phone"
                    tools:text="Contact on email or Facebook for hours of availability" />


            </RelativeLayout>


            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/layout_contact"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_grey" />

            <RelativeLayout
                android:id="@+id/layout_footer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view_line"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/iv_trip_advisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_rank"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/trip_advisor_deact" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/iv_trip_advisor"
                    tools:text="Ranked #1 of 92" />

                <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_youtube" />

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@+id/iv_youtube"
                    android:layout_toLeftOf="@+id/iv_youtube"
                    android:src="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_youtube"
                    android:layout_toLeftOf="@+id/iv_twitter"
                    android:src="@drawable/ic_fb" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>