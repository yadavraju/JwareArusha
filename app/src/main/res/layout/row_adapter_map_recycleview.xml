<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_catagory"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_marker_accounting" />

    <com.jwareconsulting.arusha.ui.fonts.ProximaNovaRegular
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_catagory"
        android:id="@+id/tv_catagory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Catagory" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_border_light_grey"
        />
</RelativeLayout>